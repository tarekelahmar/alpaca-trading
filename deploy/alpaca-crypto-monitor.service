[Unit]
Description=Alpaca Crypto Price Monitor (24/7, 60s loop)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/alpaca-trading
EnvironmentFile=/opt/alpaca-trading/.env
ExecStart=/opt/alpaca-trading/strategy-engine/.venv/bin/python scripts/crypto_monitor.py --interval 60
Restart=always
RestartSec=10
StandardOutput=append:/opt/alpaca-trading/logs/crypto-monitor.log
StandardError=append:/opt/alpaca-trading/logs/crypto-monitor.log

# Resource limits
MemoryMax=512M
CPUQuota=25%

[Install]
WantedBy=multi-user.target
